<%layout('layouts/boilerplate')%>

<div
  class="card shadow mb-5 bg-body-tertiary rounded mx-auto"
  style="width: 35rem"
>
  <img
    src="https://images.unsplash.com/photo-1492648272180-61e45a8d98a7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
    class="card-img-top"
    alt="..."
  />
  <div class="card-body">
    <h3 class="card-title">Register!</h3>
    <form class="needs-validation" action="/register" method="POST" novalidate>
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="email"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="d-grid gap-2 mt-5">
        <button class="btn btn-success">Submit</button>
      </div>
    </form>
  </div>
</div>
